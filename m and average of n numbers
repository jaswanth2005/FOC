#include <stdio.h>

int main() {
    int n, i;
    float number, sum = 0, average;

    printf("Enter the value of n: ");
    scanf("%d", &n);

    printf("Enter %d numbers:\n", n);

    for (i = 0; i < n; ++i) {
        scanf("%f", &number);
        sum += number;
    }

    average = sum / n;

    printf("The sum of the numbers is: %.2f\n", sum);
    printf("The average of the numbers is: %.2f\n", average);

    return 0;
}
